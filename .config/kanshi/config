profile mobile {
  output eDP-1 enable mode 1920x1200@59.950001Hz position 0,0
}

profile home-docked {
  output "Dell Inc. DELL P2422H 45TNRM3" mode 1920x1080@60.000Hz position 0,0 transform 270
  output "Dell Inc. DELL P2422H 85WNRM3" mode 1920x1080@60.000Hz position 1080,380
  output eDP-1 mode 1920x1200@59.950001Hz position 1080,1460
  exec if grep -q open /proc/acpi/button/lid/LID0/state; then swaymsg output eDP-1 enable; else swaymsg output eDP-1 disable; fi
}